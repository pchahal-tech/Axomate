<Window x:Class="Axomate.UI.Views.AdminPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" SizeToContent="WidthAndHeight"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20" Width="320">
        <TextBlock Text="Enter admin password" FontWeight="Bold" Margin="0 0 0 8"/>
        <PasswordBox x:Name="Pwd" Margin="0 0 0 12"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Margin="0 0 8 0" IsCancel="True" Height="36"/>
            <Button Content="Unlock" IsDefault="True" Click="OnUnlock" Height="38" Width="54"/>
        </StackPanel>
        <TextBlock x:Name="Error" Foreground="Tomato" Margin="0 8 0 0" Visibility="Collapsed"/>
    </StackPanel>
</Window>

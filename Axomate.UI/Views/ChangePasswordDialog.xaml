<Window x:Class="Axomate.UI.Views.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Admin Password" SizeToContent="WidthAndHeight"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20" Width="340">
        <TextBlock Text="New password" FontWeight="Bold"/>
        <PasswordBox x:Name="Pwd1" Margin="0 6 0 12"/>
        <TextBlock Text="Confirm password" FontWeight="Bold"/>
        <PasswordBox x:Name="Pwd2" Margin="0 6 0 12"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Margin="0 0 8 0" IsCancel="True"/>
            <Button Content="Save" IsDefault="True" Click="OnSave"/>
        </StackPanel>
        <TextBlock x:Name="Error" Foreground="Tomato" Margin="8" Visibility="Collapsed"/>
    </StackPanel>
</Window>

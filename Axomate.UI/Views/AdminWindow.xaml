<Window x:Class="Axomate.UI.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Admin Panel" Height="560" Width="840"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <!-- show only in designer so VS doesn’t choke -->
        <TextBlock d:Visibility="Visible" Visibility="Collapsed"
                   Text="Admin Panel will load at runtime"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Opacity="0.5"/>

        <!-- runtime host -->
        <ContentControl x:Name="ContentHost"/>
    </Grid>
</Window>
